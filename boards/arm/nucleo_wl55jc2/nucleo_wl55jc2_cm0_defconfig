CONFIG_SOC_SERIES_STM32WLX=y
CONFIG_SOC_STM32WL55XX=y
# 48MHz system clock
CONFIG_SYS_CLOCK_HW_CYCLES_PER_SEC=48000000

# enable uart driver
CONFIG_SERIAL=y

# enable pinmux
CONFIG_PINMUX=y

# enable GPIO
CONFIG_GPIO=y

# clock configuration
CONFIG_CLOCK_CONTROL=y


CONFIG_IPM_STM32_IPCC2=y
CONFIG_IPM_STM32_IPCC2_PROCID=3

# console
CONFIG_CONSOLE=y
CONFIG_UART_CONSOLE=y

# Enable MPU
CONFIG_ARM_MPU=y


